<link href="~/Content/Toast/Toast.css" rel="stylesheet" />
<script>    
    var x = document.getElementById("snackbar");
    $(document).ready(function () {
        $('#snackbar').addClass('show');        
        setTimeout(function () { $('#snackbar').removeClass('show').addClass(''); }, 5000);
    });
</script>
@if (TempData["Success"] != null)
{
    <div id="snackbar">@TempData["Success"].ToString()</div>
}
else if (TempData["Error"] != null)
{
    <div id="snackbar">@TempData["Error"].ToString()</div>
}
else if (TempData["Unauthorized"] != null)
{
    <div id="snackbar"> @TempData["Unauthorized"].ToString()</div>
}

